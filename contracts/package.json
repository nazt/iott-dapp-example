{
  "name": "iott-example-contracts",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^10.0.0",
    "enquirer": "^2.3.6",
    "fs-extra": "^10.0.0"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.4.1",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.1.0",
    "@types/chai": "^4.3.0",
    "@types/ethereumjs-util": "^6.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.7",
    "chai": "^4.3.4",
    "chalk": "^5.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "ethereum-private-key-to-address": "0.0.7",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.8.0",
    "hardhat-deploy": "^0.9.24",
    "hardhat-deploy-ethers": "^0.3.0-beta.12",
    "hardhat-gas-reporter": "^1.0.6",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "lodash": "^4.17.21",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rimraf": "^3.0.2",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.17",
    "solidity-docgen": "^0.5.16",
    "ts-node": "^10.4.0",
    "typechain": "^6.1.0",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "lint": "npm run lint:ts && npm run lint:sol",
    "lint:fix": "npm run lint:fix:ts && npm run lint:fix:sol",
    "lint:ts": "eslint --ext ts && prettier --list-different test/**/*.ts",
    "lint:fix:ts": "eslint --ext ts --fix && prettier --write test/**/*.ts",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:fix:sol": "prettier --write 'contracts/**/*.sol' && solhint 'contracts/**/*.sol' --fix",
    "clean": "rimraf ./artifacts/ ./cache/",
    "precompile": "npm run clean",
    "build": "hardhat compile && find artifacts/contracts/**/*.json | grep -v 'dbg' | xargs -i cp {} abis/",
    "pretest": "npm run build",
    "test": "hardhat test",
    "prepublishOnly": "npm run test"
  }
}
